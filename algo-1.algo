ALGORITHM algorithm_checkpoint_1
VAR
    setence:STRING;
    sum_of_ch:INTEGER;
    sum_of_words:INTEGER:=1;
    i:INTEGER;
BEGIN
    REPEAT
        Read(sentence)
    UNTIL (sentence[length(sentence)-1]='.')
    sum_of_ch:=length(sentence)

    FOR i FROM 0 TO length(sentence)-1 STEP 1  DO
        IF (sentence[i]=' ') THEN
            sum_of_words:=sum_of_words+1
        END_IF
    END_FOR
END